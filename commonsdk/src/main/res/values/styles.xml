<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- AppBar -->
    <style name="AppBar" parent="android:Widget.Material.Toolbar">
        <item name="backText">@string/back_text</item>
        <item name="backIcon">@drawable/ic_back</item>
        <item name="android:text">@string/title_text</item>
        <item name="menuText">@string/menu_text</item>
        <item name="menuIcon">@drawable/ic_logout</item>
        <item name="showLeft">true</item>
        <item name="showRight">true</item>
        <item name="accentColor">@android:color/black</item>
    </style>

    <style name="appbar_default_style">

    </style>

    <style name="Tile">
        <item name="leading">@drawable/ic_setting</item>
        <item name="trailing_icon">@drawable/ic_next</item>
        <item name="divider_mode">none</item>
    </style>

</resources>