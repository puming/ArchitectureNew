<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppBar">
        <attr name="backText" format="string" />
        <attr name="backIcon" format="reference" />
        <attr name="menuText" format="string" />
        <attr name="menuIcon" format="reference" />
        <attr name="android:text" />
        <attr name="showLeft" format="boolean" />
        <attr name="showRight" format="boolean" />
        <attr name="accentColor" format="color" />
    </declare-styleable>
    <!-- Default Toolbar style. -->
    <attr name="appBarDefStyle" format="reference" />
    <!---->
    <declare-styleable name="ImageTextCell">
        <attr name="icon_width" format="dimension" />
        <attr name="icon" format="reference" />
        <attr name="icon_height" format="dimension" />
        <attr name="text" format="string" />
        <attr name="text_max_width" format="dimension" />
        <attr name="text_max_height" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color|reference" />
        <attr name="top_margin" format="dimension" />
        <attr name="bottom_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Tile">
        <attr name="show_leading" format="boolean" />
        <attr name="divider_color" format="color" />
        <attr name="divider_mode" format="enum">
            <enum name="none" value="0" />
            <enum name="whole" value="1" />
            <enum name="lack" value="2" />
        </attr>
        <attr name="title" format="string" />
        <attr name="leading" format="reference" />
        <attr name="trailing_icon" format="reference" />
        <attr name="trailing_text" format="string" />
        <attr name="text_size" />
        <attr name="text_color" />
    </declare-styleable>
</resources>